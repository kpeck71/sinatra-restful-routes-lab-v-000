<h1><%=@recipe.name%></h1>
<h2>Ingredients:</h2>
<p><%=@recipe.ingredients%></p>
<h2>Cook Time:</h2>
<p><%=@recipe.cook_time%></p>

<form action="/recipes/<%= @recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>Name: <input type="text" name="@recipe.name"></p>
  <p>Ingredients: <input type="text" name="@recipe.ingredients"></p>
  <p>Cook Time: <input type="text" name="@recipe.cook_time"></p>
  <input type="submit" value="submit">
</form>
